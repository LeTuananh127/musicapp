# Line ending normalization
* text=auto

# Force LF for source code
*.py text eol=lf
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.html text eol=lf
*.cmake text eol=lf

# Keep Windows scripts with CRLF if desired
*.bat text eol=crlf
*.ps1 text eol=crlf

# Treat these as binary (no diff)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.mp3 binary
*.wav binary
*.ogg binary
*.ico binary
*.mp4 binary
*.mov binary
*.exe binary
*.dll binary
*.dill binary

# Flutter generated
**/generated_plugin_registrant.* text eol=lf

# Prevent linguist from classifying vendor
backend/app/static/audio/* linguist-vendored
backend/app/static/covers/* linguist-vendored
